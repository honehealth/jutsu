{
  "compilerOptions": {
    // Enable latest features
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": false,

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "customConditions": ["dev"],

    // JSX
    "jsx": "react-jsx",

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node"],

    // Resolution
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "rootDirs": ["src"],
    "incremental": true,

    // Output
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.stories.ts(x)?", "src/stories"]
}
